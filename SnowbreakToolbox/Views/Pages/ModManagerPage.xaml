<Page
    x:Class="SnowbreakToolbox.Views.Pages.ModManagerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:SnowbreakToolbox.Models"
    xmlns:pages="clr-namespace:SnowbreakToolbox.Views.Pages"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewmodels="clr-namespace:SnowbreakToolbox.ViewModels.Pages"
    Title="ModManagerPage"
    d:DataContext="{d:DesignInstance Type=pages:ModManagerPage}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button
                Margin="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Command="{Binding ViewModel.ImportModPakCommand}"
                Content="导入Mod" />
            <Button
                Margin="15"
                VerticalAlignment="Top"
                Command="{Binding ViewModel.SelectModFolderCommand}"
                Content="SelectFolder"
                RenderTransformOrigin="0.5,0.5" />
            <Button
                Margin="15"
                VerticalAlignment="Top"
                Command="{Binding ViewModel.ApplyCommand}"
                Content="Apply" />
        </StackPanel>
        <ui:Card
            Grid.Row="1"
            Margin="0,30,0,0"
            VerticalAlignment="Stretch"
            VerticalContentAlignment="Stretch"
            Visibility="Collapsed">
            <ui:ListView Margin="0,0,0,-6" ItemsSource="{Binding ViewModel.DisplayMods}">
                <ui:ListView.ItemTemplate>
                    <DataTemplate DataType="{x:Type viewmodels:DisplayMod}">
                        <Grid Margin="8,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                FontWeight="Bold"
                                Text="{Binding Name, Mode=OneWay}" />

                            <CheckBox
                                Grid.Column="1"
                                Margin="0,12"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                IsChecked="{Binding IsEnabled}" />
                        </Grid>
                    </DataTemplate>
                </ui:ListView.ItemTemplate>
            </ui:ListView>
        </ui:Card>
        <Grid Grid.Row="1">
            <TabControl
                ItemsSource="{Binding ViewModel.CharacterMods}"
                Style="{StaticResource LeftAvatarTabControl}"
                TabStripPlacement="Left">
                <!--<TabItem Header="STest1" Style="{StaticResource LeftAvatarTabItem}">
                    <Grid>
                        <TextBlock Text="Test1" />
                    </Grid>
                </TabItem>

                <TabItem Header="STest2" Style="{StaticResource LeftAvatarTabItem}">
                    <Grid>
                        <TextBlock Text="Test2" />
                    </Grid>
                </TabItem>-->
                <TabControl.ItemContainerStyle>
                    <Style BasedOn="{StaticResource LeftAvatarTabItem}" TargetType="TabItem">
                        <Setter Property="Header" Value="{Binding Name}" />
                    </Style>
                </TabControl.ItemContainerStyle>
                <TabControl.ContentTemplate>
                    <DataTemplate DataType="{x:Type viewmodels:DisplayCharacterCategory}">
                        <ItemsControl ItemsSource="{Binding Mods}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ui:CardExpander>
                                        <ui:CardExpander.Header>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock VerticalAlignment="Center" Text="{Binding Key}" />
                                                <ui:ToggleSwitch Grid.Column="1" Margin="5" />
                                            </Grid>
                                        </ui:CardExpander.Header>
                                        <Grid>
                                            <ui:ListView ItemsSource="{Binding Value}">
                                                <ui:ListView.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="3*" />
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="*" />
                                                            </Grid.ColumnDefinitions>

                                                            <Grid>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="*" />
                                                                    <RowDefinition Height="*" />
                                                                </Grid.RowDefinitions>
                                                                <ui:TextBlock
                                                                    Margin="5"
                                                                    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                                    Text="{Binding Name}" />
                                                                <ui:TextBlock
                                                                    Grid.Row="1"
                                                                    Margin="5"
                                                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                                    Text="{Binding Description}" />
                                                            </Grid>

                                                            <ui:TextBlock
                                                                Grid.Column="1"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"
                                                                Text="{Binding SkinIndex}" />

                                                            <ui:ToggleSwitch
                                                                Grid.Column="2"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center"
                                                                IsChecked="{Binding IsEnabled}" />
                                                        </Grid>
                                                    </DataTemplate>
                                                </ui:ListView.ItemTemplate>
                                            </ui:ListView>
                                        </Grid>
                                    </ui:CardExpander>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
